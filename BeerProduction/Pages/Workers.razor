@inject HttpClient Http
@using BeerProduction.Components
@using BeerProduction.Pages
@using Microsoft.AspNetCore.Components.Web
@page "/Workers"
<PageTitle>Workers Page</PageTitle>
<main class="body-content">
    <h2>Employees</h2>

    <div style="color:red;margin:.5rem 0;">@errorMessage</div>

    <table class="table" style="width:100%;border-collapse:collapse;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Role</th>
                <th>Hired</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in employees)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Name</td>
                    <td>@emp.Role</td>
                    <td>@emp.HiredOn.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</main>

@code {
    private List<Employee> employees = new();
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            employees = await Http.GetFromJsonAsync<List<Employee>>("/api/employee")
            ?? new List<Employee>();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load employees: " + ex.Message;
        }
    }

    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Role { get; set; } = "";
        public DateTime HiredOn { get; set; }
    }
}