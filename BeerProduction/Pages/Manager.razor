@page "/Manager"
@using BeerProduction.Components
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@namespace BeerProduction.Pages

<PageTitle>Manager Page</PageTitle>
<link rel="stylesheet" href="css/manageStyle.css" />
<div class="body-content">
    <h2>Production Line</h2>

    @foreach (var machine in Machines)
    {
        <div class="machine-card">
            <img src="@machine.ImageUrl" alt="Machine image" class="machine-image" />
            <div class="machine-info">
                <h3>@machine.Name</h3>
                <p>Status: <span class="status @(machine.IsOnline ? "online" : "offline")">@machine.Status</span></p>
                <p>Serial Number: @machine.SerialNumber</p>
            </div>
            <div class="machine-variables">
                <h4>Variables</h4>
                <label>
                    <InputCheckbox @bind-Value="machine.Temperature" /> Temperature
                </label><br />
                <label>
                    <InputCheckbox @bind-Value="machine.BatchId" /> Batch ID
                </label><br />
            </div>
        </div>
    }
</div>

