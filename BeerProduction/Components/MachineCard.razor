@using BeerProduction.Components.Model
@using BeerProduction.Services
@inject MachineControlService Machine


<div class="card machine-card mb-4">
    <!-- Header -->
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@Machine.GetMachineName()</h5>
            <div class="text-end">
                <span class="badge @(Machine.GetOnline() ? "bg-success" : "bg-danger")">
                    @(Machine.GetOnline() ? "Online" : "Offline")
                </span>
                <div class="small mt-1">Serial: MCH-@Machine.GetMachineId().ToString("D5")</div>
            </div>
        </div>
    </div>
    <!-- ADD THIS TEST BUTTON -->
    <div class="alert alert-warning m-2">
        <button class="btn btn-danger" @onclick="TestClick">TEST CLICK - Check Console (F12)</button>
    </div>

    <div class="card-body">
        <div class="row">
            <!-- Left: Variable Selection -->
            <div class="col-md-4 border-end">
                <h6 class="border-bottom pb-2">Variables</h6>
                <div class="d-grid gap-2">
                    @foreach (var variable in availableVariables)
                    {
                        <button
                            class="btn btn-sm @(selectedVariables.Contains(variable) ? "btn-primary" : "btn-outline-primary") text-start"
                            @onclick="() => ToggleVariable(variable)">
                            @if (selectedVariables.Contains(variable))
                            {
                                <i class="bi bi-check-square me-2"></i>
                            }
                            else
                            {
                                <i class="bi bi-square me-2"></i>
                            }
                            @variable.DisplayName
                        </button>
                    }
                </div>
                <button class="btn btn-sm btn-outline-secondary w-100 mt-2" @onclick="SelectAllVariables">
                    <i class="bi bi-check-all me-1"></i>Select All
                </button>
            </div>

            <!-- Right: Variable Display -->
            <div class="col-md-8">
                @if (!selectedVariables.Any())
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-graph-up display-4 d-block mb-2"></i>
                        <p>Select variables to display</p>
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var variable in selectedVariables)
                        {
                            <div class="col-sm-6">
                                <div class="card h-100">
                                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                                        <small class="fw-bold">@variable.DisplayName</small>
                                        <button class="btn btn-sm btn-outline-danger p-1"
                                                @onclick="() => RemoveVariable(variable)"
                                                title="Remove">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </div>
                                    <div class="card-body text-center py-3">
                                        @if (variable.Name == "Amount")
                                        {
                                            <div class="display-6 fw-bold text-info">@Machine.GetAmount()</div>
                                        }
                                        else if (variable.Name == "PPM")
                                        {
                                            <div class="display-6 fw-bold text-info">@Machine.GetPPM()<small class="h6">
                                                /min
                                            </small></div>
                                        }
                                        else if (variable.Name == "Temperature")
                                        {
                                            <div class="h4 fw-bold text-success">@Machine.GetTemperature()Â°C</div>
                                        }
                                        else if (variable.Name == "Humidity")
                                        {
                                            <div class="h4 fw-bold text-success">@Machine.GetHumidity()</div>
                                        }
                                        else if (variable.Name == "Vibration")
                                        {
                                            <div class="h4 fw-bold text-success">@Machine.GetVibration()Â°C</div>
                                        }
                                        else if (variable.Name == "DefectCount")
                                        {
                                            <div class="h3 fw-bold text-danger">@Machine.GetDefects()</div>
                                            <small class="text-muted">Defect Products</small>
                                        }
                                        else if (variable.Name == "AcceptableCount")
                                        {
                                            <div class="h3 fw-bold text-success">@Machine.GetAcceptable()</div>
                                            <small class="text-muted">Acceptable Products</small>
                                        }
                                        else if (variable.Name == "BatchProgress")
                                        {
                                            <div>
                                                <!-- Batch ID above the progress bar -->
                                                <div class="small text-muted mb-1">
                                                    Batch: #@GetBatchId(Machine.GetBatchId())
                                                </div>

                                                <!-- Progress Bar -->
                                                <div class="progress" style="height: 25px;">
                                                    <div
                                                        class="progress-bar @GetProgressBarClass(Machine.GetBatchProcess()) fw-bold d-flex align-items-center justify-content-center"
                                                        style="width: @Machine.GetBatchProcess()%">
                                                        @Machine.GetBatchProcess()%
                                                    </div>
                                                </div>

                                                <!-- Additional batch info -->
                                                <div class="small text-muted mt-1">
                                                    @Machine.GetCurrentBatch()
                                                </div>
                                            </div>
                                        }
                                        else if (variable.Name == "CurrentBatch")
                                        {
                                            <span class="badge bg-secondary fs-6">@Machine.GetCurrentBatch()</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private void TestClick()
    {
        Console.WriteLine("ðŸŽ¯ TEST BUTTON CLICKED! If you see this, clicks work!");
        StateHasChanged();
    }

    private List<VariableOption> availableVariables = new()
    {
        new VariableOption { Name = "Amount", DisplayName = "Produce Amount" },
        new VariableOption { Name = "PPM", DisplayName = "Products/min" },
        new VariableOption { Name = "Temperature", DisplayName = "Temperature" },
        new VariableOption { Name = "Humidity", DisplayName = "Humidity" },
        new VariableOption { Name = "Vibration", DisplayName = "Vibration" },
        new VariableOption { Name = "Defect", DisplayName = "Defect products" },
        new VariableOption { Name = "Accepted", DisplayName = "Accepted products" },
        new VariableOption { Name = "BatchProcess", DisplayName = "Batch process" },
        new VariableOption { Name = "Maintenance", DisplayName = "Maintenance status" },
        new VariableOption { Name = "CurrentBatch", DisplayName = "Current Batch"}
    };

    private List<VariableOption> selectedVariables = new();

    protected override void OnInitialized()
    {
        // Start with Temperature and Batch Progress selected
        selectedVariables.Add(availableVariables[0]); // Temperature
        selectedVariables.Add(availableVariables[2]); // Batch Progress
    }

    private void ToggleVariable(VariableOption variable)
    {
        Console.WriteLine($"Toggling variable: {variable.DisplayName}");
        if (selectedVariables.Contains(variable))
        {
            selectedVariables.Remove(variable);
            Console.WriteLine($"Removed {variable.DisplayName}");
        }
        else
        {
            selectedVariables.Add(variable);
            Console.WriteLine($"Added {variable.DisplayName}");
        }
        StateHasChanged();
        Console.WriteLine($"Selected variables count: {selectedVariables.Count}");
    }

    private void RemoveVariable(VariableOption variable)
    {
        Console.WriteLine($"Removing variable: {variable.DisplayName}");
        selectedVariables.Remove(variable);
        StateHasChanged();
        Console.WriteLine($"Selected variables count: {selectedVariables.Count}");
    }

    private void SelectAllVariables()
    {
        Console.WriteLine("Selecting all variables");
        selectedVariables = new List<VariableOption>(availableVariables);
        StateHasChanged();
        Console.WriteLine($"Selected variables count: {selectedVariables.Count}");
    }

    private string GetTemperatureClass(decimal temperature)
    {
        return temperature switch
        {
            > 70 => "text-danger",
            > 60 => "text-warning",
            _ => "text-success"
        };
    }

    private string GetBatchId(int machineId)
    {
        var random = new Random();
        return $"{machineId}{random.Next(1000, 9999)}";
    }

    private string GetProgressBarClass(int progress)
    {
        return progress switch
        {
            >= 90 => "bg-success",
            >= 50 => "bg-primary",
            _ => "bg-info"
        };
    }

    private class VariableOption
    {
        public string Name { get; set; } = string.Empty;
        public string DisplayName { get; set; } = string.Empty;

        // Important: Override Equals and GetHashCode for proper comparison
        public override bool Equals(object obj)
        {
            return obj is VariableOption option && Name == option.Name;
        }

        public override int GetHashCode()
        {
            return Name?.GetHashCode() ?? 0;
        }
    }

}