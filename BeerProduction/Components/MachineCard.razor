@using System.Timers
@using BeerProduction.Services
@rendermode InteractiveServer
@implements IDisposable
@inject BatchAnalysisService BatchAnalysisService

<div class="card machine-card mb-4">
    <!-- Header -->
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@MachineControlService.GetMachineName()</h5>
            <div class="text-end">
                <div class="small mt-1">Serial: MCH-@MachineControlService.GetMachineId().ToString("D5")</div>
                <h2 class="border-bottom pb-2">@onlineStatus</h2>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <!-- Left: Variable Selection -->
            <div class="col-md-4 border-end">
                <h6 class="border-bottom pb-2">Variables</h6>
                <div class="d-grid gap-2">
                    @foreach (var variable in _availableVariables)
                    {
                        <button
                            class="btn btn-sm @(selectedVariables.Contains(variable) ? "btn-primary" : "btn-outline-primary") text-start"
                            @onclick="() => ToggleVariable(variable)">
                            @if (selectedVariables.Contains(variable))
                            {
                                <i class="bi bi-check-square me-2"></i>
                            }
                            else
                            {
                                <i class="bi bi-square me-2"></i>
                            }
                            @variable.DisplayName
                        </button>
                    }
                </div>
                <button class="btn btn-sm btn-outline-secondary w-100 mt-2" @onclick="SelectAllVariables">
                    <i class="bi bi-check-all me-1"></i>Select All
                </button>
            </div>

            <!-- Right: Variable Display -->
            <div class="col-md-8">
                @if (!selectedVariables.Any())
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-graph-up display-4 d-block mb-2"></i>
                        <p>Select variables to display</p>
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var variable in selectedVariables)
                        {
                            <div class="col-sm-6">
                                <div class="card h-100">
                                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                                        <small class="fw-bold">@variable.DisplayName</small>
                                        <button class="btn btn-sm btn-outline-danger p-1"
                                                @onclick="() => RemoveVariable(variable)"
                                                title="Remove">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </div>
                                    <div class="card-body text-center py-3">
                                        @if (variable.Name == "Amount")
                                        {
                                            <div
                                                class="display-6 fw-bold text-info">@MachineControlService.GetAmount()</div>
                                        }
                                        else if (variable.Name == "PPM")
                                        {
                                            <div
                                                class="display-6 fw-bold text-info">@MachineControlService.GetPpm()<small
                                                    class="h6">/min</small></div>
                                        }
                                        else if (variable.Name == "Temperature")
                                        {
                                            <div
                                                class="h4 fw-bold @GetTemperatureClass((decimal)MachineControlService.GetTemperature())">@MachineControlService.GetTemperature()Â°C
                                            </div>
                                        }
                                        else if (variable.Name == "Humidity")
                                        {
                                            <div class="h4 fw-bold text-success">@MachineControlService.GetHumidity()%
                                            </div>
                                        }
                                        else if (variable.Name == "Vibration")
                                        {
                                            <div
                                                class="h4 fw-bold text-success">@MachineControlService.GetVibration()</div>
                                            <small class="text-muted">Vibration Level</small>
                                        }
                                        else if (variable.Name == "Defect")
                                        {
                                            <div
                                                class="h3 fw-bold text-danger">@MachineControlService.GetDefects()</div>
                                            <small class="text-muted">Defect Products</small>
                                        }
                                        else if (variable.Name == "Accepted")
                                        {
                                            <div class="h3 fw-bold text-success">@acceptedProducts</div>
                                            <small class="text-muted">Accepted Products</small>
                                        }
                                        else if (variable.Name == "DefectRate")
                                        {
                                            <div class="h3 fw-bold text-danger">@defectRate.ToString("F1")%</div>
                                            <small class="text-muted">Defect Rate</small>
                                        }
                                        else if (variable.Name == "BatchProcess")
                                        {
                                            <div>
                                                <!-- Batch ID and Progress Percentage Above Bar -->
                                                <div class="d-flex justify-content-between align-items-center mb-1">
                                                    <div class="small text-muted">Batch: #@currentBatchId</div>
                                                    <div class="h6 fw-bold text-primary mb-0">@batchProgress% Complete
                                                    </div>
                                                </div>

                                                <!-- Enhanced Progress Bar with Animation -->
                                                <div class="progress" style="height: 25px; position: relative;">
                                                    <div
                                                        class="progress-bar @GetProgressBarClass(batchProgress) fw-bold d-flex align-items-center justify-content-center progress-bar-striped progress-bar-animated"
                                                        style="width: @batchProgress%; transition: width 0.5s ease;">
                                                        @* Show percentage inside bar when there's enough space *@
                                                        @if (batchProgress > 15)
                                                        {
                                                            <span>@batchProgress%</span>
                                                        }
                                                    </div>
                                                </div>

                                                <!-- Countdown Timer and Batch Info -->
                                                <div class="d-flex justify-content-between align-items-center mt-1">
                                                    <div class="small text-muted">@currentBatchType</div>
                                                    <div class="small @GetCountdownColor() fw-bold">
                                                        @GetCountdownText()
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else if (variable.Name == "Maintenance")
                                        {
                                            <div>
                                                <div
                                                    class="h4 fw-bold @(maintenanceStatus > 80 ? "text-warning" : "text-success")">@maintenanceStatus%
                                                </div>
                                                <div class="progress mt-2" style="height: 10px;">
                                                    <div
                                                        class="progress-bar @(maintenanceStatus > 80 ? "bg-warning" : "bg-success") progress-bar-striped progress-bar-animated"
                                                        style="width: @maintenanceStatus%"></div>
                                                </div>
                                                <small class="text-muted">Maintenance Status</small>
                                            </div>
                                        }
                                        else if (variable.Name == "CurrentBatch")
                                        {
                                            <span class="badge bg-secondary fs-6">@currentBatchType</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public MachineControlService MachineControlService { get; set; } = default!;

    private Timer? _refreshTimer;
    private int batchProgress;
    private double defectRate;
    private string onlineStatus = "Loading...";
    private int acceptedProducts;
    private string currentBatchId;
    private string currentBatchType = "Loading...";
    private int maintenanceStatus;

    // Count-down timer for the batch until done:
    private TimeSpan timeRemaining = TimeSpan.Zero;
    private DateTime batchStartTime;
    private bool isBatchRunning = false;
    private int lastProduced = 0;

    private List<VariableOption> _availableVariables =
    [
        new() { Name = "Amount", DisplayName = "Produce Amount" },
        new() { Name = "PPM", DisplayName = "Products/min" },
        new() { Name = "Temperature", DisplayName = "Temperature" },
        new() { Name = "Humidity", DisplayName = "Humidity" },
        new() { Name = "Vibration", DisplayName = "Vibration" },
        new() { Name = "Defect", DisplayName = "Defect products" },
        new() { Name = "Accepted", DisplayName = "Accepted products" },
        new() { Name = "DefectRate", DisplayName = "Defect Rate" },
        new() { Name = "BatchProcess", DisplayName = "Batch process" },
        new() { Name = "Maintenance", DisplayName = "Maintenance status" },
        new() { Name = "CurrentBatch", DisplayName = "Current Batch" }
    ];

    private List<VariableOption> selectedVariables = [];

    protected override void OnInitialized()
    {
        // Start with Temperature and Batch Progress selected
        selectedVariables.Add(_availableVariables[0]); // Produce amount
        selectedVariables.Add(_availableVariables[2]); // Temperature

        // Generate batch ID only ONCE here
        currentBatchId = GetBatchId(MachineControlService.GetMachineId());

        _refreshTimer = new Timer(200);
        _refreshTimer.Elapsed += async (_, _) => await OnTimerElapsed();
        _refreshTimer.AutoReset = true;
        _refreshTimer.Enabled = true;
    }

    private async Task OnTimerElapsed()
    {
        if (MachineControlService != null)
        {
            try
            {
                var currentProduced = MachineControlService.GetProduced();
                var amount = MachineControlService.GetAmount();
                var ppm = MachineControlService.GetPpm();

                // Detect batch state changes
                if (currentProduced > 0 && currentProduced < amount && !isBatchRunning)
                {
                    // Batch just started
                    batchStartTime = DateTime.Now;
                    isBatchRunning = true;
                    lastProduced = currentProduced;
                    Console.WriteLine($"Batch started: {currentProduced}/{amount}");
                }

                // Calculate time remaining using simple PPM approach
                if (isBatchRunning && batchProgress < 100 && ppm > 0)
                {
                    var remainingToProduce = amount - currentProduced;
                    if (remainingToProduce > 0)
                    {
                        var minutesRemaining = remainingToProduce / (double)ppm;
                        timeRemaining = TimeSpan.FromMinutes(minutesRemaining);
                    }
                    else
                    {
                        timeRemaining = TimeSpan.Zero;
                    }
                }

                // Detect batch completion
                if (batchProgress >= 100 && isBatchRunning)
                {
                    isBatchRunning = false;
                    timeRemaining = TimeSpan.Zero;
                    Console.WriteLine("Batch completed!");
                }

                // Reset if production stopped
                if (currentProduced == 0 && isBatchRunning)
                {
                    isBatchRunning = false;
                    timeRemaining = TimeSpan.Zero;
                }

                // Update all values
                onlineStatus = await MachineControlService.GetOnlineAsync();
                acceptedProducts = await MachineControlService.GetAcceptableAsync();
                currentBatchType = MachineControlService.GetCurrentBatch().ToString();
                maintenanceStatus = MachineControlService.GetMaintenanceStatus();
                batchProgress = await MachineControlService.GetBatchProcessAsync();
                defectRate = await MachineControlService.GetDefectRateAsync();

                // Only log if machine is producing (not all zeros) and log every 30 sec.

                if (currentProduced > 0 && amount > 0 && DateTime.Now.Second % 30 == 0)
                {
                    await BatchAnalysisService.LogBatchDataAsync(MachineControlService);
                }

                // Debug logging
                Console.WriteLine($"Batch: {batchProgress}% | Time Left: {timeRemaining:mm\\:ss} | PPM: {ppm}");

                await InvokeAsync(StateHasChanged);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error in timer: {ex.Message}");
            }
        }
    }

    private string GetCountdownText()
    {
        if (batchProgress >= 100)
            return "âœ… Completed";

        if (!isBatchRunning || timeRemaining.TotalSeconds <= 0)
            return "â¸ï¸ Not running";

        if (timeRemaining.TotalHours >= 1)
            return $"ðŸ• {timeRemaining:h\\:mm\\:ss}";

        if (timeRemaining.TotalMinutes >= 1)
            return $"ðŸ• {timeRemaining:mm\\:ss}";

        return $"ðŸ• {timeRemaining:ss}s";
    }

    private string GetCountdownColor()
    {
        if (batchProgress >= 100)
            return "text-success";

        if (!isBatchRunning)
            return "text-muted";

        if (timeRemaining.TotalMinutes < 5)
            return "text-warning";

        if (timeRemaining.TotalMinutes < 1)
            return "text-danger";

        return "text-info";
    }

    public void Dispose()
    {
        _refreshTimer?.Stop();
        _refreshTimer?.Dispose();
    }

    private void ToggleVariable(VariableOption variable)
    {
        if (selectedVariables.Contains(variable))
        {
            selectedVariables.Remove(variable);
        }
        else
        {
            selectedVariables.Add(variable);
        }

        StateHasChanged();
    }

    private void RemoveVariable(VariableOption variable)
    {
        selectedVariables.Remove(variable);
        StateHasChanged();
    }

    private void SelectAllVariables()
    {
        selectedVariables = new List<VariableOption>(_availableVariables);
        StateHasChanged();
    }

    private string GetTemperatureClass(decimal temperature)
    {
        return temperature switch
        {
            > 70 => "text-danger",
            > 60 => "text-warning",
            _ => "text-success"
        };
    }

    private string GetBatchId(int machineId)
    {
        var random = new Random();
        return $"{machineId}{random.Next(1000, 9999)}";
    }

    private string GetProgressBarClass(int progress)
    {
        return progress switch
        {
            >= 90 => "bg-success",
            >= 50 => "bg-primary",
            _ => "bg-info"
        };
    }

    private class VariableOption
    {
        public string Name { get; set; } = string.Empty;
        public string DisplayName { get; set; } = string.Empty;

        public override bool Equals(object obj)
        {
            return obj is VariableOption option && Name == option.Name;
        }

        public override int GetHashCode()
        {
            return Name?.GetHashCode() ?? 0;
        }
    }

}