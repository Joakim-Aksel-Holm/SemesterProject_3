@using BeerProduction.Components.Model
<style>
    .machine-card .card.h-100 {
        min-height: 140px;
        display: flex;
        flex-direction: column;
    }
    
    .machine-card .card-body.text-center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex: 1;
    }
</style>

<div class="card machine-card mb-4">
    <!-- Header -->
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@Machine.Name</h5>
            <div class="text-end">
                <span class="badge @(Machine.IsOnline ? "bg-success" : "bg-danger")">
                    @(Machine.IsOnline ? "Online" : "Offline")
                </span>
                <div class="small mt-1">Serial: MCH-@Machine.MachineId.ToString("D5")</div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <!-- Left: Variable Selection -->
            <div class="col-md-4 border-end">
                <h6 class="border-bottom pb-2">Variables</h6>
                <div class="d-grid gap-2">
                    @foreach (var variable in availableVariables)
                    {
                        <button
                            class="btn btn-sm @(IsVariableSelected(variable) ? "btn-primary" : "btn-outline-primary") text-start"
                            @onclick="() => ToggleVariable(variable)">
                            @if (IsVariableSelected(variable))
                            {
                                <i class="bi bi-check-square me-2"></i>
                            }   
                            else
                            {
                                <i class="bi bi-square me-2"></i>
                            }
                            @variable.DisplayName
                        </button>
                    }
                </div>
                <button class="btn btn-sm btn-outline-secondary w-100 mt-2" @onclick="SelectAllVariables">
                    <i class="bi bi-check-all me-1"></i>Select All
                </button>
            </div>

            <!-- Right: Variable Display -->
            <div class="col-md-8">
                @if (!selectedVariables.Any())
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-graph-up display-4 d-block mb-2"></i>
                        <p>Select variables to display</p>
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var variable in selectedVariables)
                        {
                            <div class="col-sm-6">
                                <div class="card h-100">
                                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                                        <small class="fw-bold">@variable.DisplayName</small>
                                        <button class="btn btn-sm btn-outline-danger p-1"
                                                @onclick="() => RemoveVariable(variable)"
                                                title="Remove">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </div>
                                    <div class="card-body text-center py-3">
                                        @if (variable.Name == "Temperature")
                                        {
                                            <div class="@GetTemperatureClass(Machine.Temperature) display-6 fw-bold">
                                                @Machine.TemperatureÂ°C
                                            </div>
                                        }
                                        else if (variable.Name == "Pressure")
                                        {
                                            <div class="display-6 fw-bold text-info">@Machine.Pressure bar</div>
                                        }
                                        else if (variable.Name == "BatchProgress")
                                        {
                                            <div>
                                                <!-- Batch ID above the progress bar -->
                                                <div class="small text-muted mb-1">
                                                    Batch: #@GetBatchId(Machine.MachineId)
                                                </div>

                                                <!-- Progress Bar -->
                                                <div class="progress" style="height: 25px;">
                                                    <div
                                                        class="progress-bar @GetProgressBarClass(Machine.BatchProgress) fw-bold d-flex align-items-center justify-content-center"
                                                        style="width: @Machine.BatchProgress%">
                                                        @Machine.BatchProgress%
                                                    </div>
                                                </div>

                                                <!-- Additional batch info -->
                                                <div class="small text-muted mt-1">
                                                    @Machine.CurrentBatch
                                                </div>
                                            </div>
                                        }
                                        else if (variable.Name == "ProductionRate")
                                        {
                                            <div class="h4 fw-bold text-success">@Machine.ProductionRate<small
                                                    class="h6">/min</small></div>
                                        }
                                        else if (variable.Name == "DefectCount")
                                        {
                                            <div class="h3 fw-bold text-danger">@Machine.DefectCount</div>
                                            <small class="text-muted">Defect Products</small>
                                        }
                                        else if (variable.Name == "AcceptableCount")
                                        {
                                            <div class="h3 fw-bold text-success">@Machine.AcceptableCount</div>
                                            <small class="text-muted">Acceptable Products</small>
                                        }
                                        else if (variable.Name == "CurrentBatch")
                                        {
                                            <span class="badge bg-secondary fs-6">@Machine.CurrentBatch</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Machine Machine { get; set; } = new();
    
    private readonly List<VariableOption> availableVariables = new()
    {
        new VariableOption("Temperature", "Temperature"),
        new VariableOption("Pressure", "Pressure"),
        new VariableOption("BatchProgress", "Batch Progress"),
        new VariableOption("ProductionRate", "Speed"),
        new VariableOption("DefectCount", "Defect Products"),
        new VariableOption("AcceptableCount", "Accp. Products"),
        new VariableOption("CurrentBatch", "Current Batch")
    };

    private List<VariableOption> selectedVariables = new();

    protected override void OnInitialized()
    {
        // Start with Temperature and Batch Progress selected
        selectedVariables.Add(availableVariables[0]); // Temperature
        selectedVariables.Add(availableVariables[2]); // Batch Progress
    }

    private bool IsVariableSelected(VariableOption variable)
    {
        return selectedVariables.Any(v => v.Name == variable.Name);
    }

    private void ToggleVariable(VariableOption variable)
    {
        var existing = selectedVariables.FirstOrDefault(v => v.Name == variable.Name);
        if (existing != null)
        {
            selectedVariables.Remove(existing);
        }
        else
        {
            selectedVariables.Add(variable);
        }
        StateHasChanged();
    }

    private void RemoveVariable(VariableOption variable)
    {
        var existing = selectedVariables.FirstOrDefault(v => v.Name == variable.Name);
        if (existing != null)
        {
            selectedVariables.Remove(existing);
        }
        StateHasChanged();
    }

    private void SelectAllVariables()
    {
        selectedVariables = new List<VariableOption>(availableVariables);
        StateHasChanged();
    }

    private string GetTemperatureClass(decimal temperature)
    {
        return temperature switch
        {
            > 70 => "text-danger",
            > 60 => "text-warning",
            _ => "text-success"
        };
    }

    private string GetBatchId(int machineId)
    {
        var random = new Random();
        return $"{machineId}{random.Next(1000, 9999)}";
    }

    private string GetProgressBarClass(int progress)
    {
        return progress switch
        {
            >= 90 => "bg-success",
            >= 50 => "bg-primary",
            _ => "bg-info"
        };
    }

    private record VariableOption(string Name, string DisplayName);
}